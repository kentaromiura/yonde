{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sakubi-reader-app",
  "version": "0.1.0",
  "identifier": "com.sakubi-reader-app.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Sakubi Reader",
        "width": 800,
        "height": 600,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "src/sakubi.html",
      "src/jitindex.dict",
      "src/jitendex.comp.db",
      "src/jitindex.audio.dict",
      "src/jitendex.audio.db"
    ]
  }
}
